<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_champ_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="4dp"/>

    <ImageView
        android:id="@+id/sum_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/detail_champ_icon"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/sum_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/sum_icon"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/sum_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/sum_name"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="16sp"/>

</android.widget.RelativeLayout>

